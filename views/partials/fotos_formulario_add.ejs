<% if (!arrFotos) { %>
<div class="container">
  <p class="h2 text-center mt-4">Photos</p>
  <div class="row mt-4 ">
     <div class="col-md-4 mx-auto">
        <div class="myform form ">
           <form action="/photos/save" method="post" name="add">
              <div class="form-group mt-2">
                 <input type="text" name="title"  class="form-control" id="title" placeholder="Title" required="required">
              </div>
              <div class="form-group mt-2">
                 <input type="text" name="description"  class="form-control" id="description" placeholder="Description" required="required">
              </div>
              <div class="form-group mt-2">
                 <input type="number" min="0" max="10" step="0.01" name="rate" id="rate"  class="form-control" placeholder="Rate" required="required">
              </div>
              <div class="form-group mt-2 text-center">
                 <input type="file" name="route" id="route" accept=".png" required="required" />
              </div>
              <div class="text-center mt-4">
                 <button type="submit" class="btn btn-primary">Add</button>
              </div>
           </form>
        </div>
     </div>
  </div>
</div>
<% } else { %>
   <div class="container">
      <p class="h2 text-center mt-4">UPDATE Photo</p>
      <div class="row mt-4 ">
         <div class="col-md-4 mx-auto">
            <div class="myform form ">
               <% arrFotos.forEach((foto)=> { %>
                  <form action="/photos/update" method="post" name="add">
                     <input type="text" name="id" class="form-control" id="id" placeholder="id" required="required" value="<%= foto.id %>" hidden>
                     <div class="form-group mt-2">
                        <input type="text" name="title" class="form-control" id="title" placeholder="Title"
                           required="required" value="<%= foto.titulo %>">
                     </div>
                     <div class="form-group mt-2">
                        <input type="text" name="description" class="form-control" id="description" placeholder="Description"
                           required="required" value="<%= foto.descripcion %>">
                     </div>
                     <div class="form-group mt-2">
                        <input type="number" min="0" max="10" step="0.01" name="rate" id="rate" class="form-control"
                           placeholder="Rate" required="required" value="<%= foto.calificacion %>">
                     </div>
                     <div class="form-group mt-2 text-center">
                        <input type="file" name="route" id="route" accept=".png" required="required"/>
                     </div>
                     <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary">UPDATE PHOTO</button>
                     </div>
                  </form>
               <% }); %>
            </div>
         </div>
      </div>
   </div>
<% } %>